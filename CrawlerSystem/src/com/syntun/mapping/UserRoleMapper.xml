<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--namespace就是与此文件对应的Dao接口的全路径-->
<mapper namespace="com.syntun.dao.UserRoleDao" >
  <!--如下type的User就是mybatis-config.xml中配置的user-->
  <resultMap id="BaseResultMap" type="com.syntun.entity.UserRole" >
    <id property="id" column="id" jdbcType="INTEGER" />
    <result property="role" column="role" jdbcType="VARCHAR" />
    <result property="descpt" column="descpt" jdbcType="VARCHAR" />
    <result property="category" column="category" jdbcType="INTEGER" />
  </resultMap>

  <select id="queryUserRole" resultType="com.syntun.entity.UserRole" parameterType="java.lang.Integer">
    select * FROM t_user_role where userid = #{userid,jdbcType=INTEGER}
  </select>
  
  <select id="selectRecord" resultMap="BaseResultMap">
    select * FROM t_user_role LIMIT #{page},#{limit}
  </select>
  
  <select id="getCount" parameterType="java.util.Map" resultType="java.lang.Integer">
    SELECT COUNT(*) FROM t_user_role
    <if test="descpt != null" > where descpt like CONCAT('%',#{descpt},'%') </if>
  </select>
  
  <select id="getAllList" parameterType="java.util.Map" resultMap="BaseResultMap">
     select * from t_user_role where descpt like CONCAT('%',#{descpt},'%') 
  </select>
  
   <select id="getList" parameterType="java.util.Map"  resultMap="BaseResultMap">
     select * from t_user_role where 1=1 
     <if test="descpt != null" > and descpt like CONCAT('%',#{descpt},'%') </if>
      <if test="page != null" > LIMIT #{page},#{limit} </if>
  </select>
  
  <insert id="insert" parameterType="com.syntun.entity.UserRole" >
    insert into t_user_role (ID, userid, roleid)
    values (#{id,jdbcType=INTEGER}, #{userid}, #{roleid})
  </insert>
  
  <update id="editRecord" parameterType="java.util.Map">
  	update t_user_role set account = #{account,jdbcType=VARCHAR}, 
  		role = #{role},
  		descpt = #{descpt},
  		category = #{category} where id = #{id}
  </update>
  
  <delete id="delRecord" parameterType="java.util.Map">
  	delete from t_user_role where id = #{id}
  </delete>
  
   <delete id="delUserid" parameterType="java.lang.Integer">
  	delete from t_user_role where userid = #{userid}
  </delete>
  
  <delete id="delAllRecord" parameterType="java.lang.Long">
    delete from t_user_role where id in
    <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>

</mapper>