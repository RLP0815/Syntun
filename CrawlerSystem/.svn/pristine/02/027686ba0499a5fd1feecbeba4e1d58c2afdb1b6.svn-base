<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--namespace就是与此文件对应的Dao接口的全路径-->
<mapper namespace="com.syntun.dao.RoleDao" >
  <!--如下type的User就是mybatis-config.xml中配置的user-->
  <resultMap id="BaseResultMap" type="com.syntun.entity.Role" >
    <id property="id" column="id" jdbcType="INTEGER" />
    <result property="role" column="role" jdbcType="VARCHAR" />
    <result property="descpt" column="descpt" jdbcType="VARCHAR" />
    <result property="category" column="category" jdbcType="INTEGER" />
  </resultMap>

  <select id="selectCateAccount" resultType="com.syntun.entity.Role">
    select * FROM t_role
  </select>
  
  <select id="findone" resultType="com.syntun.entity.Role" parameterType="java.lang.Integer">
    select * FROM t_role where id = #{id,jdbcType=INTEGER}
  </select>
  
  <select id="selectRecord" resultMap="BaseResultMap">
    select * FROM t_role LIMIT #{page},#{limit}
  </select>
  
  <select id="getCount" parameterType="java.util.Map" resultType="java.lang.Integer">
    SELECT COUNT(*) FROM t_role
    <if test="descpt != null" > where descpt like CONCAT('%',#{descpt},'%') </if>
  </select>
  
  <select id="getAllList" parameterType="java.util.Map" resultMap="BaseResultMap">
     select * from t_role where descpt like CONCAT('%',#{descpt},'%') 
  </select>
  
   <select id="getList" parameterType="java.util.Map"  resultMap="BaseResultMap">
     select * from t_role where 1=1 
     <if test="descpt != null" > and descpt like CONCAT('%',#{descpt},'%') </if>
      <if test="page != null" > LIMIT #{page},#{limit} </if>
  </select>
  
  <insert id="insert" keyProperty="id" useGeneratedKeys="true" parameterType="com.syntun.entity.Role" >
    insert into t_role (role, descpt, category)
    values (#{role}, #{descpt},#{category})
  </insert>
  
  <update id="update" parameterType="com.syntun.entity.Role">
        UPDATE t_role
        <trim prefix="set" suffixOverrides=",">
            <if test="role != null and role!=''">
                role = #{role},
            </if>
            <if test="descpt != null and descpt!=''">
                descpt = #{descpt},
            </if>
            <if test="category != null and category!=''">
                category = #{category},
            </if>
        </trim>
        WHERE id = #{id}
  </update>
  
  <delete id="delete" parameterType="java.lang.Integer">
  	delete from t_role where id = #{id}
  </delete>
  
  <delete id="delAllRecord" parameterType="java.lang.Long">
    delete from t_role where id in
    <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>

</mapper>