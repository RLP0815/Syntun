<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--namespace就是与此文件对应的Dao接口的全路径-->
<mapper namespace="com.syntun.dao.SkyGroupsDao" >
  <!--如下type的User就是mybatis-config.xml中配置的user-->
  <resultMap id="BaseResultMap" type="SkyGroups" >
    <id property="id" column="ID" jdbcType="INTEGER" />
    <result property="groupName" column="group_name" jdbcType="VARCHAR" />
    <result property="inspect" column="inspect" jdbcType="VARCHAR" />
  </resultMap>

  <select id="selectSkyGroups" resultType="SkyGroups">
    select * FROM sky_groups
  </select>
  
  <select id="selectRecord" resultMap="BaseResultMap">
    select * FROM sky_groups ORDER BY id DESC LIMIT #{page},#{limit}
  </select>
  
  <select id="getCount" parameterType="java.util.Map" resultType="java.lang.Integer">
    SELECT COUNT(*) FROM sky_groups
    <if test="groupName != null" > where group_name like CONCAT('%',#{groupName},'%') </if>
  </select>
  
  <select id="getAllList" resultMap="BaseResultMap">
     select * from sky_groups ORDER BY id ASC
  </select>
  
   <select id="getList" parameterType="java.util.Map"  resultMap="BaseResultMap">
     select * from sky_groups where 1=1 
     <if test="groupName != null" > and group_name like CONCAT('%',#{groupName},'%') </if>
      ORDER BY id ASC
      <if test="page != null" > LIMIT #{page},#{limit} </if>
  </select>
  
  <insert id="addRecord" keyProperty="id" useGeneratedKeys="true" parameterType="java.util.Map" >
    insert into sky_groups (group_name, inspect)
    values (#{groupName}, #{inspect})
  </insert>
  
  <update id="editRecord" parameterType="java.util.Map">
  	update sky_groups set group_name = #{groupName}, 
  		inspect = #{inspect} where id = #{id}
  </update>
  
  <delete id="delRecord" parameterType="java.util.Map">
  	delete from sky_groups where id = #{id}
  </delete>
  
  <delete id="delAllRecord" parameterType="java.lang.Long">
    delete from sky_groups where id in
    <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
  
  <delete id="delRecordUser" parameterType="java.util.Map">
  	delete from sky_users where group_id = #{id}
  </delete>
  
  <delete id="delAllRecordUser" parameterType="java.lang.Long">
    delete from sky_users where group_id in
    <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
  
</mapper>