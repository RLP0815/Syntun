<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--namespace就是与此文件对应的Dao接口的全路径-->
<mapper namespace="com.syntun.dao.ErrResultDao" >
  <!--如下type的User就是mybatis-config.xml中配置的user-->
  <resultMap id="BaseResultMap" type="ErrResult" >
    <result property="platformId" column="platform_id" jdbcType="INTEGER" />
    <result property="operationProductId" column="operation_product_id" jdbcType="VARCHAR" />
    <result property="getDate" column="get_date" jdbcType="VARCHAR" />
    <result property="errTypeName" column="err_type_name" jdbcType="VARCHAR" />
    <result property="errTypeInfo" column="err_type_info" jdbcType="VARCHAR" />
    <result property="errFocusInformation" column="err_focus_information" jdbcType="VARCHAR" />
    <result property="shopId" column="shop_id" jdbcType="VARCHAR" />
  </resultMap>

  <select id="selectErrResult" resultType="ErrResult">
    select * FROM err_result
  </select>
  
  <select id="selectRecord" resultMap="BaseResultMap">
    select * FROM err_result LIMIT #{page},#{limit}
  </select>
  
  <select id="getCount" parameterType="java.util.Map" resultType="java.lang.Integer">
    SELECT COUNT(*) FROM err_result
    <if test="errTypeName != null" > where err_type_name like CONCAT('%',#{errTypeName},'%') </if>
  </select>
  
  <select id="getAllList" resultMap="BaseResultMap">
     select * from err_result
  </select>
  
   <select id="getList" parameterType="java.util.Map"  resultMap="BaseResultMap">
     select * from err_result where 1=1 
     <if test="errTypeName != null" > and err_type_name like CONCAT('%',#{errTypeName},'%') </if>
      ORDER BY get_date DESC
      <if test="page != null" > LIMIT #{page},#{limit} </if>
  </select>
  
  <delete id="delAllRecord" >
    delete from err_result
  </delete>

</mapper>